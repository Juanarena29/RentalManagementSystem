@page "/CambiarPassword"
@using CT.Application.DTOs
@using CT.Application.UseCases.Users
@using CT.Domain.Exceptions
@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<PageTitle>Cambiar Contraseña — CT</PageTitle>

<AuthorizeView>
    <Authorized Context="authContext">
        <div class="cambiar-password-container">
            <div class="cambiar-password-card">
                @if (_debeRestablecer)
                {
                    <div class="alert alert-warning">
                        Debe cambiar su contraseña antes de continuar.
                    </div>
                }
                <h3>Cambiar Contraseña</h3>

                @if (!string.IsNullOrEmpty(_mensaje))
                {
                    <div class="alert @(_esError ? "alert-danger" : "alert-success")">@_mensaje</div>
                }

                <EditForm Model="_model" OnValidSubmit="CambiarAsync" FormName="cambiarPassword">
                    <div class="form-group">
                        <label>Contraseña actual</label>
                        <InputText type="password" @bind-Value="_model.PasswordActual" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Nueva contraseña</label>
                        <InputText type="password" @bind-Value="_model.PasswordNueva" class="form-control" />
                        <small class="text-muted">Mínimo 8 caracteres, una mayúscula y un número.</small>
                    </div>
                    <div class="form-group">
                        <label>Confirmar nueva contraseña</label>
                        <InputText type="password" @bind-Value="_model.ConfirmarPassword" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" disabled="@_cargando">
                        @(_cargando ? "Cambiando..." : "Cambiar Contraseña")
                    </button>
                </EditForm>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthState { get; set; }

    [Inject] private UserCambiarPasswordUseCase CambiarPasswordUseCase { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private CambiarPasswordModel _model = new();
    private string? _mensaje;
    private bool _esError;
    private bool _cargando;
    private bool _debeRestablecer;
    private int _userId;

    protected override async Task OnInitializedAsync()
    {
        if (AuthState is null) return;
        var state = await AuthState;
        var user = state.User;

        if (user.Identity?.IsAuthenticated != true)
            return;

        var idClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        if (int.TryParse(idClaim, out var id))
            _userId = id;

        var resetClaim = user.FindFirst("DebeRestablecerPassword")?.Value;
        _debeRestablecer = resetClaim == "True";
    }

    private async Task CambiarAsync()
    {
        _mensaje = null;
        _cargando = true;

        if (_model.PasswordNueva != _model.ConfirmarPassword)
        {
            _mensaje = "Las contraseñas no coinciden.";
            _esError = true;
            _cargando = false;
            return;
        }

        try
        {
            var dto = new CambiarPasswordDto(_userId, _model.PasswordActual, _model.PasswordNueva);
            await CambiarPasswordUseCase.EjecutarAsync(dto);
            _mensaje = "Contraseña cambiada exitosamente.";
            _esError = false;
            _model = new();

            await Task.Delay(1500);
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (WrongCredentialsException)
        {
            _mensaje = "La contraseña actual es incorrecta.";
            _esError = true;
        }
        catch (ValidationException ex)
        {
            _mensaje = ex.Message;
            _esError = true;
        }
        catch (Exception)
        {
            _mensaje = "Ocurrió un error inesperado.";
            _esError = true;
        }
        finally
        {
            _cargando = false;
        }
    }

    private sealed class CambiarPasswordModel
    {
        public string PasswordActual { get; set; } = string.Empty;
        public string PasswordNueva { get; set; } = string.Empty;
        public string ConfirmarPassword { get; set; } = string.Empty;
    }
}
